<h1>
  <%= @wiki.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
  </small>
</h1>

<div class="row">
 <div class="col-md-8">
   <p><%= markdown(@wiki.body) %></p>
 </div>
</div>

<div class="col-md-4">
  <%= link_to "Edit", edit_wiki_path, class: 'btn btn-success' if policy(@wiki).update? %>

  <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } if policy(@wiki).destroy?%>

  <%= link_to "View Wikis", wikis_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <div class="col-md-6">
    <%= form_tag collaborators_path do  %>
      <%= label_tag 'Enter user email:' %>
      <%= text_field_tag :email %>
      <%= hidden_field_tag :wiki_id, @wiki.id %>
      <%= submit_tag 'Add collaborator' %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>Remove collaborators</h3>
    <% @wiki.users.each do |user| %>
      <p><%= user.email %></p>
      <%= link_to 'Remove', collaborator_path(user_id: user.id, wiki_id: @wiki.id), method: :delete, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
<h3>Manage collaborators</h3>




