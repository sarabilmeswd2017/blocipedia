<h1>
  <%= @wiki.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
  </small>
</h1>

<div class="row">
   <div class="col-md-8">
     <p><%= @wiki.body %></p>
   </div>
  </div>

   <div class="col-md-4">
      <%= link_to "Edit", edit_wiki_path, class: 'btn btn-success' if policy(@wiki).update? %>

      <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } if policy(@wiki).destroy?%>

   </div>
